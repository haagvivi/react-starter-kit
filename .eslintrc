{
  parser: "babel-eslint",
  env: {
    es6: true,
    browser: true
  },
  parserOptions: {
    ecmaversion: 6,
    sourceType: "module",
    ecmacFeatures: {
      jsx: true,
      experimentalObjectRestSpread: true
    }
  },
  extends: ["eslint:recommended", "plugin:react/recommended", "standard"],
  plugins: [
    "react",
  ],
  rules: {
    "no-console": [2, {allow: ["warn", "error"]}],
    "jsx-quotes": [2, "prefer-single"],
    "react/jsx-no-literals": 2
  }
}